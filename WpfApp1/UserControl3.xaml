<UserControl x:Class="WpfApp1.UserControl3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1"
             mc:Ignorable="d" >
    <UserControl.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}"/>
    </UserControl.Background>
    <Grid Margin="10" >
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}"/>
        </Grid.Background>
        <Rectangle Fill="#FF4DB03D" Height="35" Margin="200,35,200,100" VerticalAlignment="Top" Width="100">
            <Rectangle.Stroke>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ScrollBarColorKey}}"/>
            </Rectangle.Stroke>
        </Rectangle>
        <Canvas Margin="10" Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" Panel.ZIndex="-1000">
            <TextBlock Canvas.Left="299" TextWrapping="Wrap" Text="1У09У" Canvas.Top="28" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Canvas>

    </Grid>
</UserControl>
